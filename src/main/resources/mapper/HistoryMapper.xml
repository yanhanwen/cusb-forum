<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.forum.dao.FloorMapper">
    <resultMap id="BaseResultMap" type="com.forum.entity.Forum">
        <id column="ip" property="ip" jdbcType="VARCHAR"/>
        <result column="time" property="time" jdbcType="TIMESTAMP"/>
        <result column="user_id" property="user_id" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="Base_Column_List">
    ip, time, user_id
  </sql>
    <select id="selectByIp" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from history
        where ip = #{ip,jdbcType=VARCHAR}
    </select>

    <delete id="deleteByIp" parameterType="java.lang.String">
    delete from history
    where ip = #{ip,jdbcType=VARCHAR}
  </delete>

    <insert id="insert" parameterType="com.forum.entity.History">
        insert into history
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="ip != null">
                ip,
            </if>
            <if test="time != null">
                time,
            </if>
            <if test="user_id != null">
                user_id,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="ip != null">
                #{ip,jdbcType=VARCHAR},
            </if>
            <if test="time != null">
                #{time,jdbcType=TIMESTAMP},
            </if>
            <if test="user_id != null">
                #{user_id,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <update id="updateByIp" parameterType="com.forum.entity.Forum">
    update forum
    set ip = #{ip,jdbcType=VARCHAR},
      time = #{time,jdbcType=TIMESTAMP},
      user_id = #{user_id,jdbcType=VARCHAR}
    where ip = #{ip,jdbcType=VARCHAR}
  </update>
</mapper>